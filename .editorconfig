root=true

[*.{js,jsx}]
indent_style = space
indent_size = 2
tab_width = 2
trim_trailing_whitespace = true
insert_final_newline = true

[{*.json,.postcssrc}]
indent_style = space
indent_size = 4
tab_width = 4

[*.{html,css,md}]
trim_trailing_whitespace = false
insert_final_newline = false
indent_style = space
tab_width = 4
indent_size = 4
